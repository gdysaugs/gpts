# CUDA設定
CUDA_VISIBLE_DEVICES=0
CUDA_VERSION=11.8

# アプリケーション設定
PYTHONPATH=/app
IS_HALF=True  # 半精度モード（VRAM節約）

# パス設定
MODEL_PATH=/app/GPT_SoVITS/pretrained_models
INPUT_PATH=/app/input
OUTPUT_PATH=/app/output
LOG_PATH=/app/logs

# モデル設定
SOVITS_MODEL=v4
USE_GPU=True

# 音声設定
SAMPLE_RATE=48000
AUDIO_FORMAT=wav

# デバッグ設定
DEBUG_MODE=False
LOG_LEVEL=INFO